@import "{design}/app"

.lesionTableRow
  display: flex
  border-top: 2px solid black
  height: 63px
  width: 100%

  .lesionRowSidebar
    flex: 1
    color: $textSecondaryColor
    background: $darkUiColor
    max-width: 30px

    .lesionNumber
      text-align: center
      font-weight: 200
      padding: 3px

    &.active
      border-left: 4px $activeColor solid

  .lesionDetails
    flex: 1
    padding-left: 20px
    padding-top: 5px
    display: flex
    flex-direction: column
    align-items: stretch

    .location
      flex: 1
      font-weight: 200
      font-size: 14px
      color: $textSecondaryColor
      height: 20px
      width: 100%

    .timepointData
      display: flex

      div
        font-weight: 200
        padding-bottom: 10px
        flex: 1
        justify-content: space-around
