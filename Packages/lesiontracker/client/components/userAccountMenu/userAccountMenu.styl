@import "{design}/app"

#userAccountMenu
  padding: 5px
  height: 100%

  .dropdown-toggle
    cursor: pointer
    line-height: 20px
    font-weight: 400
    font-size: 13px
    text-decoration: none
    background-color: $primaryBackgroundColor
    color: $textSecondaryColor

    .menuButton
      display: inline-block
      padding-left: 5px
      border-left: solid 1px #516873

      .fa
        color: #94a8b3

      .caret
        color: #516873

  ul.dropdown-menu
    li
      cursor: pointer
