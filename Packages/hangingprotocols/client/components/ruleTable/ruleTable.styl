table.ruleTable
  thead
    tr
      th
        color: whitesmoke
        text-align: center

      th:first-child
        text-align: left

  tbody
    background: #3e3e3e

    tr
      td
        color: #ffffff
        text-align: center

        .failWarning
          color: red

        .editRule
        .deleteRule
        .addRule
          &:hover, &:active
            cursor:pointer
            color: #48d3ff

            -webkit-transition: all 0.1s ease
            -moz-transition: all 0.1s ease
            transition: all 0.1s ease

      td:first-child
        text-align: left